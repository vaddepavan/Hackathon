<html>
	<head>
		<script>
			function check(){
				var pattern1 = /^\d{10}$/;
				var pattern2 = /^\d{10}$/;
				var m1 = document.form1.t1.value;
				var m2 = document.form1.t2.value;

				if(!(m1.search(pattern1))&&!(m2.search(pattern2)))
				   alert("your prefrences are stored");
				else{
					if(m1.search(pattern1) == -1)
					   alert("please enter a valid mobile no. in first preferenced number");
					if(m2.search(pattern2) == -1)
					   alert("please enter a valid mobile no. in second preferenced number");
				}
			}
		</script>
	</head>
